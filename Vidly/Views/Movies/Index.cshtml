@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (!Model.Any())
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var movie in Model)
                 {
                     <tr>
                         <td>
                             @Html.ActionLink(movie.Name,
                                 "Details",
                                 "Movies",
                                 new {id = movie.Id},
                                 null
                                 )
                         </td>
                         <td>
                             @movie.Genre.Name
                         </td>
                     </tr>
                 }
            }
            else
            {
                <tr>
                    <td>
                        <h2>We have no movies yet.</h2>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}

